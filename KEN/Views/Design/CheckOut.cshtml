@{
    Layout = "~/Views/Shared/_ClientLayoutTheme.cshtml";
}

@{ 
    var states = ViewBag.state;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <script src="~/Content/js/CheckOut.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js" integrity="sha512-DUC8yqWf7ez3JD1jszxCWSVB0DMP78eOyBpMa5aJki1bIRARykviOuImIczkxlj1KhVSyS16w2FSQetkD4UU2w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="//code.jquery.com/jquery-2.2.4.min.js"></script>
    @*<script src="~/assets/js/config.navbar-vertical.js"></script>*@
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="">
    <link href="~/assets/css/perfect-scrollbar.css" rel="stylesheet" />
    <link href="~/Content/css/libraries/theme.css" rel="stylesheet" />

</head>
<body>
    <div class="container" data-layout="container">
        <div class="row no-gutters" id="order">
            <div class="col-xl-4 order-xl-1 pl-xl-2">
                <div class="card mb-3">
                    <div class="card-header bg-light btn-reveal-trigger d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Order Summary</h5><a class="btn btn-link btn-sm btn-reveal text-600" href="~/Design/Cart"><span class="fas fa-pencil-alt"></span></a>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless fs--1 mb-0">
                            <thead id="OrderSummary">

                            </thead>
                            <tr class="border-bottom">
                                <th class="pl-0">Subtotal</th>
                                <th class="pr-0 text-right" id="subtotal"></th>
                            </tr>

                            <tr class="border-bottom">
                                <th class="pl-0">Shipping</th>
                                <th class="pr-0 text-right" id="ShippingCharge">$20</th>
                            </tr>
                            <tr>
                                <th class="pl-0 pb-0">Total</th>
                                <th class="pr-0 text-right pb-0" id="total"></th>
                            </tr>

                        </table>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-100">
                        <div class="font-weight-semi-bold">Payable Total</div>
                        <div class="font-weight-bold" id="payabletotal"></div>
                    </div>

                </div>
                <button class="btn btn-success mt-3 px-5 col-8" type="submit" style="float:right;" onclick="OrderAddress()">Buy &amp; Now</button>
            </div>
            <div class="col-xl-8 pr-xl-2">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-sm-auto">
                                <h5 class="mb-2 mb-sm-0">Your Shipping Address</h5>
                            </div>
                            <div class="col-sm-auto"><a class="btn btn-falcon-default btn-sm" onclick="AddAddress()"><span class="fas fa-plus mr-2" data-fa-transform="shrink-2"></span>Add New Address</a></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row " id="address">
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <div class="card col-8">
            <div class="card-header bg-light">
                <h5 class="mb-0">Payment Method</h5>
            </div>
            <div class="card-body">
                <div class="custom-control custom-radio">
                    <input class="custom-control-input radio-collapse" type="radio" name="payment-method" id="credit-card" checked="checked" />
                    <label class="custom-control-label" for="credit-card">
                        <span class="d-flex align-items-center mb-2 fs-1">Credit Card</span>
                    </label>
                </div>
                <div class="row">
                    <div class="col-sm-8 pl-5 ml-n2">
                        <div class="form-group">
                            <label class="ls text-uppercase text-600 font-weight-semi-bold mb-0">Card Number</label>
                            <input class="form-control" type="text" placeholder="•••• •••• •••• ••••">
                        </div>
                        <div class="form-row align-items-center">
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="ls text-uppercase text-600 font-weight-semi-bold mb-0">Exp Date</label>
                                    <input class="form-control" type="text" placeholder="mm/yyyy">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="ls text-uppercase text-600 font-weight-semi-bold mb-0">CVV<a class="d-inline-block" href="#"><span class="fa fa-question-circle ml-2" data-toggle="tooltip" data-placement="top" title="Card verification value"></span></a></label>
                                    <input class="form-control" type="text" placeholder="123" maxlength="3" pattern="[0-9]{3}">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-center pt-2 d-none d-sm-block">
                        <div class="rounded p-2 mt-3 bg-100">
                            <div class="text-uppercase fs--2 font-weight-bold">We Accept</div><img src="" alt="" width="120">
                        </div>
                    </div>
                </div>
                <div class="custom-control custom-radio">
                    <input class="custom-control-input" type="radio" name="payment-method" id="paypal" />
                    <label class="custom-control-label" for="paypal">
                        <span class="d-flex align-items-center mb-2 fs-1">Paypal</span>
                    </label>
                </div>
                <hr class="border-dashed my-5">
                <div class="row">
                    <div class="col-md-7 col-xl-12 col-xxl-7 px-md-3 mb-xxl-0">
                        <div class="media">
                            <img class="mr-3" src="../assets/img/icons/shield.png" alt="" width="60">
                            <div class="media-body">
                                <h5 class="mb-2">Buyer Protection</h5>
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" id="protection-option-1" type="checkbox" checked>
                                    <label class="custom-control-label" for="protection-option-1"> <strong>Full Refund </strong>If you don't <br class="d-none d-md-block d-lg-none">receive your order</label>
                                </div>
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" id="protection-option-2" type="checkbox" checked>
                                    <label class="custom-control-label" for="protection-option-2"> <strong>Full or Partial Refund, </strong>If the product is not as described in details</label>
                                </div><a class="fs--1 ml-3 pl-2" href="#!">Learn More<span class="fas fa-caret-right ml-1" data-fa-transform="down-2">    </span></a>
                            </div>
                        </div>
                        <div class="vertical-line d-none d-md-block d-xl-none d-xxl-block"></div>
                    </div>
                    <div class="col-md-5 col-xl-12 col-xxl-5 pl-lg-4 pl-xl-2 pl-xxl-5 text-center text-md-left text-xl-center text-xxl-left">
                        <hr class="border-dashed d-block d-md-none d-xl-block d-xxl-none my-4">
                        <div class="fs-2 font-weight-semi-bold">All Total: <span class="text-primary" id="ConfirmPay"></span></div>
                        <button class="btn btn-success mt-3 px-5" type="submit">Confirm &amp; Pay</button>
                        <p class="fs--1 mt-3 mb-0">By clicking <strong>Confirm & Pay </strong>button you agree to the <a href="#!">Terms &amp; Conditions</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="modal fade" id="updateAddressModal" tabindex="-1" role="dialog" aria-labelledby="addAddressModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Address Details</h5>
                    <button type="button" class="close closebutton" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" onclick="closeModal()">&times;</span>
                    </button>
                </div>
                <div class="modal-body row m-1">

                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="addAddressModal" tabindex="-1" role="dialog" aria-labelledby="addAddressModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Address Details</h5>
                    <button type="button" class="close closebutton" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" onclick="clearForm()">&times;</span>
                    </button>
                </div>
                <div class="modal-body row m-1">

                    <form class="col" id="addressForm">
                        <input type="hidden" id="txtaddressId" />
                        <div class="form-group mb-3">
                            <label for="name">Name<span class="me-1 spanrequired">*</span></label>
                            <input type="text" class="form-control" id="txtname" name="txtname" placeholder="Enter Name">

                        </div>
                       @* <div class="form-group mb-3">
                            <label for="attention">Attention<span class="me-1 spanrequired">*</span></label>
                            <input type="text" class="form-control" id="txtattention" name="txtattention" placeholder="Enter Attention">
                        </div>*@
                        <div class="form-group mb-3">
                            <label for="address1">Address Line 1<span class="me-1 spanrequired">*</span></label>
                            <input type="text" class="form-control" id="txtaddress1" name="txtaddress1" placeholder="Enter Address">
                        </div>
                        <div class="form-group mb-3">
                            <label for="address2">Address Line 2<span class="me-1 spanrequired">*</span></label>
                            <input type="text" class="form-control" id="txtaddress2" name="txtaddress2" placeholder="Enter Address">
                        </div>
                        <div class="form-group mb-3 row">
                            <div class="col">

                                <label for="state">State<span class="me-1 spanrequired">*</span></label>
                                @Html.DropDownList("states", new SelectList(ViewBag.state, "Name", "Name"), "--Select--", new { @id = "txtstate", @class = "col-12" })


                            </div>
                            <div class="col">
                                <label for="postcode">PostCode<span class="me-1 spanrequired">*</span></label>
                                <input type="number" class="form-control" id="txtpostcode" name="txtpostcode" placeholder="Enter PostCode">
                            </div>

                        </div>

                        <div class="form-group mb-3">
                            <label for="addressnote">Address Note<span class="me-1 spanrequired">*</span></label>
                            <textarea class="form-control" id="addressnote" name="addressnote" rows="3" style="resize:none;"></textarea>
                        </div>

                        <div class="form-group d-flex justify-content-end">

                            <input type="submit" class="btn btn-primary me-1" name="submit" value="Save">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="clearForm()">Close</button>

                        </div>


                    </form>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
    <script src="~/Content/js/libraries/jquery-ui.min.js"></script>
    <script src="~/Content/js/libraries/bootstrap.min.js"></script>
</body>
</html>