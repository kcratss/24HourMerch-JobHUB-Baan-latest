@{ Layout = "~/Views/Shared/_ClientLayout.cshtml";}


    <main class="main" id="top">
        <div class="container-fluid">

            <div class="row flex-center min-vh-100 py-6">
                <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">

                    <div class="card">
                        <div class="row">

                            <img src="~/Images/JobHUB_Logo_Sign_In.jpg" alt="image" class="img-responsive" />
                        </div>
                        <div class="card-body p-4 p-sm-5">
                            <div class="row flex-between-center mb-2">
                                <div class="col-auto">
                                    <h5>Register</h5>
                                </div>
                                <div class="col-auto fs--1 text-600"><span class="mb-0 undefined">Have an account?</span> <span><a href="@Url.Action("Login", "Client")">Login</a></span></div>
                            </div>
                            <form id="registerform">
                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col"><input type="text" class="form-control" name="txtfirstnm" placeholder="First Name" id="txtfirstnm"></div>
                                        <div class="col"><input type="text" class="form-control" name="txtlastnm" placeholder="Last Name" id="txtlastnm"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="txtusername" placeholder="Username" id="txtusername">
                                </div>
                                <div class="mb-3">
                                    <input type="email" class="form-control" name="txtemail" placeholder="Email" id="txtemail">
                                </div>
                                <div class="row gx-2">
                                    <div class="mb-3 col-sm-6">
                                        <input type="password" class="form-control" name="txtpassword" placeholder="Password" id="txtpassword">
                                    </div>
                                    <div class="mb-3 col-sm-6">
                                        <input type="password" class="form-control" name="txtconfirmpassword" placeholder="Confirm Password" id="txtconfirmpassword">
                                    </div>
                                </div>
                                <div class="form-check" id="checkgroup">
                                    <input class="form-check-input" type="checkbox" id="termsregister" name="termsregister" />
                                    <label class="form-label" for="termsregister">I accept the <a href="#!">terms </a>and <a href="#!">privacy policy</a></label>
                                </div>
                                <div class="mb-3">
                                    @*<button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">Register</button>*@
                                    <input class="submit btn btn-primary d-block w-100 mt-3" type="submit" name="submit" value="Register">
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>





