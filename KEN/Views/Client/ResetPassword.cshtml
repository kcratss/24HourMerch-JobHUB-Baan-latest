
@model KEN.Models.ClientResetPasswordViewModel
@{ Layout = "~/Views/Shared/_ClientLayout.cshtml";}

<body style="overflow:hidden;">
    <div class="row flex-center min-vh-100 py-6 text-center">
   
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                
                <div class="card">
                    <div class="row">

                        <img src="~/Images/JobHUB_Logo_Sign_In.jpg" alt="image" class="img-responsive" />
                    </div>
                    <div class="card-body p-4 p-sm-5">
                        @using (Html.BeginForm("ResetPassword", "Client", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "resetForm" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <h5 class="text-center">Reset new password</h5>
                            @Html.HiddenFor(x => x.UserId)
                            @Html.HiddenFor(x => x.Email)

                            <div class="mb-3 mt-4" id="forError">

                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Enter Your Password", @type = "password", @id = "txtPassword" })


                            </div>
                            <div class="mb-3" id="forError">
                                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Enter Confirm password", @type = "password", @id = "txtConfirmpwd" })

                            </div>
                            <div class="mb-3">

                                <input class="btn btn-primary d-block w-100 mt-3" type="submit" value="Update Password">
                            </div>



                        }
                    </div>
                </div>
            </div>
        </div>

    

</body>