@model KEN.Models.ClientForgotPasswordViewModel

@{ Layout = "~/Views/Shared/_ClientLayout.cshtml";}
<body style="overflow:none;">
    <div class="row flex-center min-vh-100 py-6 text-center">

        <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">

            <div class="card" style="min-height:465.578px !important;">
                <div class="row">

                    <img src="~/Images/JobHUB_Logo_Sign_In.jpg" alt="image" class="img-responsive" />
                </div>
                <div class="card-body p-4 p-sm-5" style="min-height:232.219px !important;">

                    @using (Html.BeginForm("ForgotPassword", "Client", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "forgotForm" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <h5 class="mb-0">Forgot your password?</h5><small>Enter your email and we'll send you a reset link.</small>
                        <div id="forError" class="mt-4">
                            @Html.TextBoxFor(model => model.Email, new { id = "UserEmail", @class = "form-control", placeholder = "Enter Your Email Address" })
                        </div>
                        <div class="mb-3">

                            <input class="btn btn-primary d-block w-100 mt-3" type="submit" value="Send reset link">
                        </div>



                    }
                </div>
            </div>

        </div>

    </div>

</body>



