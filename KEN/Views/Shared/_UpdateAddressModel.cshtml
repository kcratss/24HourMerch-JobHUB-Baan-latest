@model KEN.Models.ClientAddressViewModel


<form class="col" id="addressForm">
    <input type="hidden" id="txtaddressId" value="@Model.AddressId"/>
    <div class="form-group mb-3">
        <label for="name">Name<span class="me-1 spanrequired">*</span></label>
        <input type="text" class="form-control" id="txtname" name="txtname" placeholder="Enter Name" value="@Model.Name">

    </div>
  @*  <div class="form-group mb-3">
        <label for="attention">Attention<span class="me-1 spanrequired">*</span></label>
        <input type="text" class="form-control" id="txtattention" name="txtattention" placeholder="Enter Attention" value="@Model.Attention">
    </div>*@
    <div class="form-group mb-3">
        <label for="address1">Address Line 1<span class="me-1 spanrequired">*</span></label>
        <input type="text" class="form-control" id="txtaddress1" name="txtaddress1" placeholder="Enter Address" value="@Model.AddressLine1">
    </div>
    <div class="form-group mb-3">
        <label for="address2">Address Line 2<span class="me-1 spanrequired">*</span></label>
        <input type="text" class="form-control" id="txtaddress2" name="txtaddress2" placeholder="Enter Address" value="@Model.AddressLine2">
    </div>
    <div class="form-group mb-3 row">
        <div class="col">
            <label for="state">State<span class="me-1 spanrequired">*</span></label>
            @Html.DropDownListFor(model => model.State, new SelectList(ViewBag.state, "Name", "Name",Model.State), new { @id = "txtstate", @class = "col-12" })
        </div>
        <div class="col">
            <label for="postcode">PostCode<span class="me-1 spanrequired">*</span></label>
            <input type="number" class="form-control" id="txtpostcode" name="txtpostcode" placeholder="Enter PostCode" value="@Model.PostCode">
        </div>

    </div>

    <div class="form-group mb-3">
        <label for="addressnote">Address Note<span class="me-1 spanrequired">*</span></label>
        <textarea class="form-control" id="addressnote" name="addressnote" rows="3" style="resize:none;">@Model.AddressNote</textarea>
        
    </div>

    <div class="form-group d-flex justify-content-end">

        <input type="submit" class="btn btn-primary me-1" name="submit" value="Update">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeModal()">Close</button>

    </div>


</form>



