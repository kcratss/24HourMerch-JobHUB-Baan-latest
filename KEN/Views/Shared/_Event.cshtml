    <div class="row OpprtDetailsForm EventContainer">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 innerDiv">
            <p class="lblOpprtDetail">Event Name<span class="reqField" style="color:red;">*</span></p>
            <p class="lblOpprtDetail">Event Date</p>
            <p class="lblOpprtDetail">Event Cycle</p>
            <p class="lblOpprtDetail">Next Date</p>
            <p class="lblOpprtDetail">Event Location</p>
            <p class="lblOpprtDetail">Event Website</p>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 innerDiv">
            @Html.Hidden("HiddenEventId", "", new { @id = "HiddenEventId" })
            <input type="text" id="txtEventName" class="txtOpprtDetails" />
            @Html.TextBox("txteventDate", String.Format("{0:dd/MM/yyyy}", ""), new { @id = "txteventDate", @class = "txtOpprtDetails" })
            @* <input type="text" id="txteventDate"  class="txtOpprtDetails datepicker" />*@
            @Html.DropDownList("eventCycle", new SelectList(ViewBag.Cycles, "Name", "Name"), "--Select--", new { @id = "txteventCycle", @class = "txtOpprtDetails" })
            @Html.TextBox("txtnextDate", String.Format("{0:dd/MM/yyyy}", ""), new { @id = "txtnextDate", @class = "txtOpprtDetails" })
            @*<input type="text" id="txtnextDate" class="txtOpprtDetails datepicker" />*@
            <input type="text" id="txtEventLocation" class="txtOpprtDetails" />
            <input type="text" id="txtEventWebsite" class="txtOpprtDetails" />
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 innerDiv">
            <p class="lblOpprtDetail">Event Notes</p>
            <textarea id="txtEventNotes" class="txtOpprtDetails" style="width: 100%;resize: none;"></textarea>
        </div>
    </div>
